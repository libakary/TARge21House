@model IEnumerable<TARge21House.Models.House.HouseIndexViewModel>

@{
	int rowNumber = 1;

}

<div class="h1">
	Houses
</div>

<div>
	<a asp-action="create" asp-controller="houses" type="submit" class="btn btn-primary">Create</a>
</div>

<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Bedrooms</th>
				<th scope="col">Bathrooms</th>
				<th scope="col">Rent Price</th>
				<th scope="col">Built Date</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var house in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@house.Bedrooms</td>
					<td>@house.Bathrooms</td>
					<td>@house.RentPrice</td>
					<td>@house.BuiltDate</td>
					<td>
						<!--details button-->
						<a asp-action="details" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-info">Details</a>
						<!--update button-->
						<a asp-action="update" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-primary">Update</a>
						<!--delete button-->
						<a asp-action="delete" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>